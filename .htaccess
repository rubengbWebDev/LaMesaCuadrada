RewriteEngine On
RewriteRule ^api/usuario/?$ api/controller/UsuarioController.php
RewriteRule ^api/usuario/([0-9]+)?$ api/controller/UsuarioController.php?id=$1

RewriteRule ^login2$ php/login.php [L]
RewriteRule ^login/?$ api/controller/UsuarioController.php
RewriteRule ^logout/?$ api/controller/LogoutController.php
RewriteRule ^registro/?$ api/controller/UsuarioController.php

RewriteRule ^noticias/?$ api/controller/NoticiasController.php
RewriteRule ^noticias/?$ api/controller/NoticiasController.php

RewriteRule ^hilos/?$ api/controller/HiloController.php [L]

RewriteRule ^hilo/?$ api/controller/MensajeController.php [L]
RewriteRule ^hilo/([0-9]+)?$ api/controller/MensajeController.php?id_hilo=$1

RewriteRule ^partidas/?$ api/controller/PartidaController.php [L]


